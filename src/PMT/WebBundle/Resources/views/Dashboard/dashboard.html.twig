{% extends "PMTWebBundle::layout.html.twig" %}

{% block content_title %}Dashboard{% endblock %}

{% block content_actions %}
    <ul class="actions nav nav-pills pull-right">
        <li class="active">
            <a href="{{ path('pmtweb_issue_form') }}"><i class="icon-edit icon-plus"></i> Create
                issue</a>
        </li>
        <li>
            <a href="#"><i class="icon-edit icon-plus"></i> Add gadgets</a>
        </li>
        <li>
            <a href="#"><i class="icon-edit"></i> Edit layout</a>
        </li>
        <li>
            <a href="#"><i class="icon-wrench"></i> Settings</a>
        </li>
    </ul>
{% endblock %}

{% block content %}
    <div class="row-fluid">
        <div class="span6">
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_stream">
                            Activity stream
                        </a>
                    </div>
                    <div id="accordion_stream" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            {% include 'PMTWebBundle:Activity:list.html.twig' with {'view': 'advanced'} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_myissues">
                            Assigned to me
                        </a>
                    </div>
                    <div id="accordion_myissues" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            some content
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_inprogress">
                            Issues in progress
                        </a>
                    </div>
                    <div id="accordion_inprogress" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            {% include 'PMTWebBundle:Issue:list.html.twig' with {'issues': issues, 'view': 'advanced'} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'PMTWebBundle:Form:modalForm.html.twig' %}
{% endblock %}
