{% extends "PMTWebBundle::layout.html.twig" %}
{% trans_default_domain 'PMTWebBundle' %}

{% block content_title %}{{ 'dashboard.dashboard'|trans }}{% endblock %}

{% block content_actions %}
    <ul class="actions nav nav-pills pull-right">
        <li class="active">
            <a href="{{ path('pmtweb_issue_form') }}"><span class="glyphicon glyphicon-plus"></span> {{ 'issue.link.create'|trans }}</a>
        </li>
        <li>
            <a href="#"><span class="glyphicon glyphicon-plus"></span> Add gadgets</a>
        </li>
        <li>
            <a href="#"><span class="glyphicon glyphicon-edit"></span> Edit layout</a>
        </li>
        <li>
            <a href="#"><span class="glyphicon glyphicon-wrench"></span> Settings</a>
        </li>
    </ul>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_stream">
                            {{ 'activity.activity_stream'|trans }}
                        </a>
                    </div>
                    <div id="accordion_stream" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            {% include 'PMTWebBundle:Activity:list.html.twig' with {'view': 'advanced', 'activity': activity} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_myissues">
                            {{ 'issue.assigned_to_me'|trans }}
                        </a>
                    </div>
                    <div id="accordion_myissues" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            some content
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_inprogress">
                            {{ 'issue.issues_in_progress'|trans }}
                        </a>
                    </div>
                    <div id="accordion_inprogress" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            {% include 'PMTWebBundle:Issue:list.html.twig' with {'issues': issues, 'view': 'advanced'} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
