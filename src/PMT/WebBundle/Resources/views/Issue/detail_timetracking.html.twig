            <td class="bar">
                <div class="progress">
                    <div class="progress-bar progress-bar-danger" style="width: 100%;"></div>
                </div>
            </td>
        </tr>
        <tr>
            <td>Logged:</td>
            <td>5h</td>
            <td>
                <div class="progress">
                    <div class="progress-bar" style="width: 80%;"></div>
                    <div class="progress-bar progress-bar-danger" style="width: 20%;"></div>
                </div>
            </td>
        </tr>
    </table>
{% endblock %}
