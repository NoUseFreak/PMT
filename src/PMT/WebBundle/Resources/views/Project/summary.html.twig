{% extends "PMTWebBundle:Project:layout.html.twig" %}
{% trans_default_domain 'PMTWebBundle' %}

{% block tabContent %}
    <div class="row-fluid">
        <div class="span6">
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_description">
                            Description
                        </a>
                    </div>
                    <div id="accordion_description" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            {{ project.description }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_issues">
                            Issues
                        </a>
                    </div>
                    <div id="accordion_issues" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            {% include 'PMTWebBundle:Issue:list.html.twig' with {'issues': project.issues, 'view': 'simple'} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_milestones">
                            {{ 'milestone.milestones'|trans }}
                        </a>
                    </div>
                    <div id="accordion_milestones" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            The milestones of the project
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" href="#accordion_stream">
                            {{ 'activity.activity_stream'|trans }}
                        </a>
                    </div>
                    <div id="accordion_stream" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            {% include 'PMTWebBundle:Activity:list.html.twig' with {'view': 'advanced', 'activity': activity} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
