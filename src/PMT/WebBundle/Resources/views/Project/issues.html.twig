{% extends "PMTWebBundle:Project:layout.html.twig" %}

{% block tabContent %}
    <div class="row">
        <div class="col-lg-12">
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle">
                            Issues
                        </a>
                    </div>
                    <div id="accordion_description" class="accordion-body in">
                        <div class="accordion-inner">
                            {% include 'PMTWebBundle:Issue:list.html.twig' with {'issues': project.issues, 'view': 'advanced'} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
